<Window x:Class="Databinding_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Databinding_1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label FontSize="{Binding Value, ElementName=slider}">test</Label>
        <Slider x:Name="slider" Height="Auto" Width="Auto" Minimum="10" Maximum="100" VerticalAlignment="Center"></Slider>
    </Grid>
</Window>
